@model BalancedSoccerTeam.Models.Player

@{
    ViewData["Title"] = "Delete Player";
}

<h1>Delete Player</h1>

<h3>Are you sure you want to delete this player?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Overall Score</dt>
        <dd class="col-sm-9">@Model.OverallScore.ToString("F1")</dd>

        <dt class="col-sm-3">Rank</dt>
        <dd class="col-sm-9">@Model.Rank</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>